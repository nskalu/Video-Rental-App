@model Vidly.EF.Customer

@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .divclose {
        background-color: lemonchiffon;
        padding: 15px;
        height: 20%;
        width: 25%;
        border-radius: 10%;
    }
</style>

<h2>Customer Details</h2>
<div class="divclose">
    <h3>@Model.Name</h3>
    <h4>@Model.Membership_Type</h4>
    <h4>@Model.DOB</h4>
    <h4>@Model.Phone</h4>
    <h4>@Model.Address</h4>
    @if (Model.ImageUrl == null)
    {
        <span>There is no Image to display for  @Model.Name</span>
    }
    else
    {
        <div><img src=@Model.ImageUrl.ToString() height="100" width="90" style="border:solid" /></div>
    }

    @if (Model.Image == null)
    {
        <span>There is no Image to display for  @Model.Name</span>
    }
    else
    {
        <div><img src = '@Url.Action("CustomerImage", "Images", new{Id = @Model.Id})' height="100" width="90" style="border:solid" /></div>
        
    }
    @ViewBag.Message
</div>

<div>
    @Html.ActionLink("Back to List", "Index1", "Customer")
</div>

